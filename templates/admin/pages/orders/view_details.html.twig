{% extends 'admin/base.html.twig' %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Order</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span><a  class="fa fa-arrow-left" href="{{ path('admin_orders_list') }}"> back</a></span>
                        <span><a class="fa fa-edit" href="{{ path('orders_edit', {'id': order.id}) }}"> Edit</a></span>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTables-example">
                                <tbody>
                                <tr>
                                    <th>Order Price</th>
                                    <td>{{ order.totalPrice }}</td>
                                </tr>
                                <tr>
                                    <th>Customer Name</th>
                                    <td>{{ order.userName }}</td>
                                </tr>
                                <tr>
                                    <th>Phone</th>
                                    <td>{{ order.phone }}</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>{{ order.address }}</td>
                                </tr>
                                <tr>
                                    <th>City</th>
                                    <td>{{ order.city }}</td>
                                </tr>
                                <tr>
                                    <th>Comment</th>
                                    <td>{{ order.comment }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ include('admin/pages/orders/change_status_form.html.twig') }}</td>
                                </tr>
                                <tr>
                                    <th>CreatedAt</th>
                                    <td>{{ order.createdAt ? order.createdAt|date('Y-m-d') : '' }}</td>
                                </tr>

                                </tbody>
                            </table>
                    </div>
                    <!-- /.panel -->
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Products</h4>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTables-example">
                            <thead>
                            <tr>
                                <th class="table-grid"></th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                            {% for item in products %}
                                <tr class="cart-header">
                                    <td class="ring-in">
                                        <a href="{{ path('show_route',{ 'slug': item.product.getSlug }) }}" class="at-in">
                                            <img height="10%" src="{{ asset('uploads/images/' ~ item.product.images |first) }}">
                                        </a>
                                    </td>
                                    <td>
                                        {{ item.product.name }}
                                    </td>
                                    <td>
                                        {{ item.product.category }}
                                    </td>
                                    <td>
                                        {{ item.quantity }}
                                    </td>
                                    <td class="item_price">
                                        {{ item.price }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {{ include('admin/pages/orders/_delete_form.html.twig') }}
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock content %}